<h2> Sign Up </h2>

{{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
{{/if}}

<form action="/signup" method="post">
  <label for="name-input"> First Name: </label>
  <input type="text" name="firstname" id="name-input" placeholder="e.g., Diana">
  <br><br>
  <label for="name-input"> Last Name: </label>
  <input type="text" name="lastname" id="name-input" placeholder="e.g., Prince">
  <br><br>
  <label for="email-input"> Email: </label>
  <input type="email" name="email" id="email-input" placeholder="e.g., diana@themyscira.agency">
  <br><br>
  <label for="password-input"> Password: </label>
  <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
  <br><br>
  <button> Create New Account </button>
</form>

<p>
  Already have an account?
  <a href="/login">
    Log in.
  </a>
</p>