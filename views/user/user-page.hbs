{{!-- {{#if isUserLoggedIn}} --}}

<h2>User's Page</h2>
    
  <p> Hello, {{ currentUserInfo.firstname }}. </p>

{{#if places}}
<p>Your places:</p>
<ul>
      {{#each places}}
      <li>
        <a href="/{{ this._id}}">{{ this.name}}</a> |
        <a href="/{{ this._id}}/edit">Edit</a> |
        <a href="/{{ this._id}}/delete">Delete</a>
      </li>
      {{/each }}
    </ul>
{{/if}}

<a href="/new-place">Add a new place</a>
<br></br>
<a href="/logout"> Log Out </a>
<br></br>

<div id="map"></div>

<section>
  {{#each places}}
    {{!-- <h3>{{ this.name }}</h3> --}}
    <img class="img" src="{{ this.path }}" alt="{{ this.originalName }}" />
  {{/each}}
</section>

{{!-- {{/if}} --}}

