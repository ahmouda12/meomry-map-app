{{!-- {{#if isUserLoggedIn}} --}}

<h2>Dashboard</h2>
    
  <p> Hello, {{ currentUserInfo.firstname }}. </p>

{{#if places}}
<a href="/memory">Go to your memories</a>
<p>Your places:</p>
<ul>
      {{#each places}}
      <li >
        <a href="#" class="zoom">{{this.name}}</a> |
        <a href="/{{this._id}}/edit">Edit</a> |
        <a href="/{{this._id}}/delete">Delete</a>
      </li>
      {{/each }}
    </ul>
{{/if}}

<a href="/new">Add a new place</a>
<br></br>
<a href="/logout"> Log Out </a>
<br></br>

<div id="map"></div>

<section>
  {{#each places}}
    {{!-- <h3>{{ this.name }}</h3> --}}
    <img class="img" src="{{ this.imgPath }}" alt="{{ this.imgName }}" />
  {{/each}}
</section>

{{!-- {{/if}} --}}

