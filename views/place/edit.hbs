<div class="container-fluid">
  <div class="row">
    <div class="col-md-5 col-sm-5 col-xs-5 col-lg-5">
        <h3  class="mainbar">{{place.name}}</h3>
        <form method="POST" action="/{{place._id}}" enctype="multipart/form-data">
            <div class="form-group"></div>
    	    <label class="edit-text">Name:</label>
    	    <input type="" name="name" placeholder="Place name" value="{{ place.name}}" class="form-control">
    	    <label class="edit-text">Description:</label>
    	    <input type="" name="description" placeholder="Description" value="{{ place.description}}" class="form-control">
            <label class="edit-text">Location</label>
            <div class="row">
                <div class="col">
			        <input type="text" name="latitude" id="latitude" placeholder="latitude" value="{{ place.location.coordinates.[1]}}" class="form-control">
                </div>
                <div class="col">
			        <input type="text" name="longitude" id="longitude" placeholder="longitude" value="{{ place.location.coordinates.[0]}}" class="form-control">
                </div>
            </div>
            <div class="col">
                <label class="edit-text">Photo</label>
                <input type="file" name="photo">
            </div>
            <div class="main-text">
    	        <button class="btn btn-success" type="submit" name="" id="submit">Update</button>
            </div>
        </form>
    <div class="main-text"><a href="/{{place.memoryId}}/memory-dashboard"><font font color="blue">BACK TO MEMORY</font></a></div>
  </div>
    <div class="col-md-7 col-sm-7 col-xs-7 col-lg-7 lealet-map">
      <section id="map"></section>
    </div>
  </div>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://unpkg.com/leaflet@1.3.2/dist/leaflet.js"
